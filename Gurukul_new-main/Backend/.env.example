# Centralized Backend Environment (example)
# Copy to Backend/.env and set strong secrets for production

# Runtime
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://your-frontend.example.com

# Databases
MONGO_ROOT_USERNAME=
MONGO_ROOT_PASSWORD=
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=gurukul
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# External API Keys
GROQ_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=
AGENTOPS_API_KEY=
LLAMA_API_KEY=
UNIGURU_API_KEY=

# Service URLs
AGENT_API_URL=
TUTORBOT_URL=
UNIGURU_API_BASE_URL=

# Local LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PRIMARY=llama2
OLLAMA_MODEL_ALTERNATIVES=mistral,codellama,neural-chat

# Memory Management
MEMORY_DB_NAME=gurukul
MEMORY_API_KEYS=

# Thresholds
LOW_QUIZ_SCORE_THRESHOLD=60
WELLNESS_CONCERN_THRESHOLD=3
INACTIVITY_DAYS_THRESHOLD=7

# TTS
TTS_ENABLED=false
TTS_API_URL=

